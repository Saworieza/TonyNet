<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @subscriber.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @subscriber.phone %>
</p>

<p>
  <strong>Apartment:</strong>
  <%= @subscriber.apartment.name %>
</p>

<p>
  <strong>House Number:</strong>
  <%= @subscriber.house.number %>
</p>

<%= link_to 'Edit', edit_subscriber_path(@subscriber) %> |
<%= link_to 'Back', subscribers_path %>

<h3>Payments</h3>
<hr>
<table>
  <thead>
    <tr>
      <!--<th>Subscriber</th>-->
      <th>Date</th>
      <th>Payment type</th>
      <th>Transaction code</th>
      <th>Invoice no</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriber.payments.each do |payment| %>
      <tr>
        <!--<td><%#= payment.subscriber.name %></td>-->
        <td><%= payment.date %></td>
        <td><%= payment.payment_type %></td>
        <td><%= payment.transaction_code %></td>
        <td><%= payment.invoice_no %></td>
        <td><%= payment.amount %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

