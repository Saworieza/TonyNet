%p#notice= notice
%p
  %strong Name:
  = @subscriber.name
%p
  %strong Phone:
  = @subscriber.phone
%p
  %strong Apartment:
  = @subscriber.apartment.name
%p
  %strong House Number:
  = @subscriber.house.number
= link_to 'Edit', edit_subscriber_path(@subscriber)
|
= link_to 'Back', subscribers_path
%h3 Invoices
%hr/
%table
  %thead
    %tr
      %th Invoice No
      %th Date
      %th Due date
      %th Package
      %th Amount
      %th

  %tbody
    - @subscriber.invoices.each do |invoice|
      %tr
        %td= invoice.number
        %td= invoice.date
        %td= invoice.due_date
        %td= invoice.package.name
        %td= invoice.package.cost
        %td= link_to 'Show', invoice
%h3 Payments
%hr/
%table
  %thead
    %tr
      %th Date
      %th Payment type
  %tbody
    %tr
    - @subscriber.invoices.each do |invoice|
      %td= invoice.date
      - invoice.payments.each do |payment|
        %td= payment.date
        %td= payment.payment_type
        %td= payment.transaction_code

