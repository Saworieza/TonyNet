= form_for @invoice do |f|
  - if @invoice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invoice.errors.count, "error")} prohibited this invoice from being saved:"
      %ul
        - @invoice.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :subscriber
    = f.collection_select :subscriber_id, Subscriber.all, :id, :name, include_blank: true
    / = f.text_field :subscriber
  .field
    = f.label :package
    = f.collection_select :package_id, Package.all, :id, :name, include_blank: true
    / = f.text_field :package
  .field
    = f.label :invoice_number
    = f.number_field :number
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :due_date
    = f.date_select :due_date
  .actions
    = f.submit 'Save'
