= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :invoice
    = f.collection_select :invoice_id, Invoice.all, :id, :number, include_blank: true
    / = f.text_field :invoice
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :payment_type
    = f.text_field :payment_type
  .field
    = f.label :transaction_code
    = f.text_field :transaction_code
  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
